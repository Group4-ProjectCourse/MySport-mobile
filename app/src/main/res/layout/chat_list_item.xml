<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/chat_item_msg_sender"
        android:textStyle="normal|bold"
        android:text="Sender"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/chat_item_msg_time"
        android:layout_alignParentEnd="true"
        android:text="11:30 17 May 2021"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/chat_item_msg_content"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:text="Hello I am message"
        android:layout_marginTop="5dp"
        android:layout_below="@id/chat_item_msg_sender"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:layout_height="wrap_content"/>

</RelativeLayout>